{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@hooks/*": ["./hooks/*"],
            "@components/*": ["./components/*"],
            "@pages/*": ["./pages/*"],
            "@styles/*": ["./styles/*"],
            "@utils/*": ["./utils/*"],
            "@customTypes/*": ["./customTypes/*"],
            "@helpers/*": ["./helpers/*"],
            "@calculations/*": ["./calculations/*"],
            "@icons/*": [
                "./icons/champions*",
                "./icons/passives*",
                "./icons/spells*"
            ],
            "@reducers/*": ["./reducers/*"],
            "@champStats/*": ["./champStats/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".eslintrc.js"],
    "exclude": ["node_modules"]
}
